{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitReturns": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": "dist"
  },
  "include" : ["**/*.tsx", "**/*.ts", "**/*.d.ts"],
}
